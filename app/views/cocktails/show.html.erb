<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"><%= @cocktail.name %> </h1>
     <%if @cocktail.photo.attached?%> 
          <%=cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill%>
           <% end %>
    <ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item">
      <%= dose.description %>
      <%= link_to "Remove",
                  cocktail_dose_path(@cocktail, dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
    
    <p class="lead">This will get you very drunk. For sure.</p>
    <%=link_to "change dose", new_cocktail_dose_path(@cocktail, @dose)%> <br> <br>
    <%=link_to "BACK", cocktails_path%>
  </div>
</div>