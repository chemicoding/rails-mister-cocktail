<div class="container my-5">
  <div class="row">
    <div class="col text-center">
      <h1>All cocktails</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col">
        <div class="card mt-4" style="width: 18rem;">
          <div class="card-body">

          <%if cocktail.photo.attached?%> 
          <%=cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill%>
           <% end %>
            <h5 class="card-title"><%= cocktail.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Good Shit</h6>
            <p class="card-text">This is the best shit you're gonna drink in your life,
            tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
            quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo.</p>
            <a href="" class="card-link"><%=link_to 'Show More', cocktail_path(cocktail) %></a>
          </div>
        </div>
        
      </div>
    <% end %>
  </div>
  
</div>  

